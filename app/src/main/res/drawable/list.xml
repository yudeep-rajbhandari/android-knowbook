<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"

        >
        <shape android:shape="rectangle">

              <corners android:radius="3dip" />
            <gradient android:angle="-90" android:endColor="#689a92" android:startColor="#345953"  />

        </shape>
    </item>
    <item android:state_focused="true"

        >
        <shape android:shape="rectangle">
             <gradient android:angle="-90" android:endColor="#689992" android:startColor="#7fffd4" />
             <corners android:radius="3dip"  />
            <solid android:color="#fffff0"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#689a92" android:startColor="#7fffd4" />
             <corners android:radius="3dip" />
            <solid android:color="#fffff0"></solid>
        </shape>
    </item>
</selector>