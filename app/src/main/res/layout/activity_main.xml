<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    >
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        tools:context="com.example.user.volleyjson.MainActivity"

        >

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"
            />


        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spinner"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="40dp"
            android:background="@android:drawable/btn_dropdown"

            />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/textView3"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/app_bar"
            android:text="Semester"

            android:textColor="@color/text"
            android:textSize="20dp"
            android:layout_marginLeft="100dp" />

        <Spinner

            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:background="@android:drawable/btn_dropdown"
            android:elevation="0dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:textColor="@color/text"
            android:text="Department"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/app_bar" />



        <Button
            android:id="@+id/button_note"
            android:layout_width="165dp"
            android:layout_height="120dp"
            android:background="@drawable/notes_final1"


            android:layout_below="@+id/button_subject"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"



             />

        <Button
            android:id="@+id/button_subject"
            android:layout_width="165dp"
            android:layout_height="120dp"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"


            android:background="@drawable/subjects_final"


             />
        <Button
            android:id="@+id/button_routine"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:background="@drawable/routine_final1"
            android:layout_below="@+id/spinner2"
            android:layout_toRightOf="@id/button_subject"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

        <Button
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:background="@drawable/question_final"

            android:layout_toRightOf="@id/button_note"
            android:layout_below="@id/button_routine"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/button_question" />


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_navigation_drawer"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"


        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

